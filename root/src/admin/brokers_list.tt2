<p><a href="[% c.uri_for(c.controller.action_for('broker_create')) %]">[ Create a Broker ]</a></p>

<table id="box-table-a" summary="All Brokers List">
  <thead>
    <tr>
      <th scope="col">Broker ID</th>
      <th scope="col">Broker Name</th>
      <th scope="col">Percentage</th>
      <th scope="col">Active</th>
      <th scope="col">More</th>
    </tr>
  </thead>
  <tbody>
 [% FOREACH broker IN brokers -%]
    <tr>
      <td>[% broker.id %]</td>
      <td>[% broker.name %]</td>
      <td>[% broker.percentage %]</td>
      <td>[% broker.active %]</td>
      <td><a href="[% c.uri_for(c.controller.action_for('broker_view'), [broker.id]) %]">details</a></td>
    </tr>
[% END -%]
  </tbody>
</table>

