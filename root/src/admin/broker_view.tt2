<table id="box-table-a" summary="All Callcenters List">
  <thead>
    <tr>
      <th scope="col">Callcenter ID</th>
      <th scope="col">Broker</th>
      <th scope="col">Callcenter Name</th>
      <th scope="col">Callcenter Alias</th>
      <th scope="col">Active</th>
      <th scope="col">More</th>
    </tr>
  </thead>
  <tbody>
 [% FOREACH callcenter IN callcenters -%]
    <tr>
      <td>[% callcenter.id %]</td>
      <td>[% callcenter.broker_id %]</td>
      <td>[% callcenter.name %]</td>
      <td>[% callcenter.alias %]</td>
      <td>[% callcenter.active %]</td>
      <td><a href="[% c.uri_for(c.controller.action_for('callcenter_view'), [callcenter.id]) %]">details</a></td>
    </tr>
